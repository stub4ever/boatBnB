<div class="text-center">

  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <hr style="width: 20em;">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, :input_html => {class: 'normal-form'} %>
    <%= f.input :last_name, :input_html => {class: 'normal-form'} %>
    <%= f.input :email, required: true, autofocus: true, :input_html => {class: 'normal-form'} %>
    <%= f.input :address, :input_html => {class: 'normal-form'} %>
    <%= f.input :city, :input_html => {class: 'normal-form'} %>
    <%= f.input :phone_number, :input_html => {class: 'normal-form'} %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "Leave it blank if you don't want to change it", required: false, :input_html => {class: 'normal-form'} %>
    <%= f.input :password_confirmation, required: false, :input_html => {class: 'normal-form'} %>
    <%= f.input :current_password, hint: "We need your current password to confirm your changes", required: true, :input_html => {class: 'normal-form'} %>
  </div>
  <%= f.input :photo, :input_html => {class: 'normal-form'} %>
  <%= f.input :photo_cache, as: :hidden %>
  <hr style="width: 20em;">
  <div class="form-actions">
    <%= f.button :submit, "Update", class: "btn btn-success" %>
  </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
