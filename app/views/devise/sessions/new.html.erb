  <div class="form-in text-center">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, :input_html => {:style=> 'width: 20em; text-align: center; margin: 0 auto;'} %>
      <%= f.input :password, required: false, :input_html => {:style=> 'width: 20em; text-align: center; margin: 0 auto;'} %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-success'%>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
